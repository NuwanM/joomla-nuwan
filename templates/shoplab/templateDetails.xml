<languages folder="language">
<language tag="en-GB">en-GB/en-GB.tpl_shoplab.sys.ini</language>
<language tag="en-GB">en-GB/en-GB.tpl_shoplab.ini</language>
</languages>
<config>
<fields name="params">
<fieldset name="advanced">
<field name="sitetitle"  type="text" default="Shoplab Joomla! 3 / VirtueMart 3 template" label="TPL_SHOPLAB_FIELD_SITETITLE_LABEL" description="TPL_SHOPLAB_FIELD_SITETITLE_DESC" filter="string"></field>  
<field name="display_slideshow" type="list" default="1" label="TPL_SHOPLAB_DISPLAY_SLIDESHOW" description="TPL_SHOPLAB_DISPLAY_SLIDESHOW_DESC">
<option value="0">TPL_SHOPLAB_NO</option>
<option value="1">TPL_SHOPLAB_YES</option>
</field>
<field name="frontpage" type="list" default="1" label="TPL_SHOPLAB_SHOW_FRONTAPGE" description="TPL_SHOPLAB_SHOW_FRONTAPGE_DESC">
<option value="1">Enabled</option>
<option value="0">Disabled</option>
</field>
<field name="spacer1" type="spacer" hr="true" />
<field name="slideshow1" type="media" default="templates/shoplab/images/image01.jpg" directoryimg="1" label="TPL_SHOPLAB_SLIDESHOW" description="TPL_SHOPLAB_SLIDESHOW_DESC" />
<field name="spacer2" type="spacer" hr="true" />
<field name="description1" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" label="TPL_SHOPLAB_FIELD_DESCRIPTION1_LABEL" filter="safehtml" description="TPL_SHOPLAB_FIELD_DESCRIPTION1_DESC" />
<field name="spacer3" type="spacer" hr="true" />
<field name="slideshow2" type="media" default="templates/shoplab/images/image02.jpg" directoryimg="1" label="TPL_SHOPLAB_SLIDESHOW" description="TPL_SHOPLAB_SLIDESHOW_DESC" />
<field name="spacer4" type="spacer" hr="true" />
<field name="description2" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" label="TPL_SHOPLAB_FIELD_DESCRIPTION2_LABEL" filter="safehtml" description="TPL_SHOPLAB_FIELD_DESCRIPTION2_DESC" />
<field name="spacer5" type="spacer" hr="true" />
<field name="slideshow3" type="media" default="templates/shoplab/images/image03.jpg" directoryimg="1" label="TPL_SHOPLAB_SLIDESHOW" description="TPL_SHOPLAB_SLIDESHOW_DESC" />
<field name="spacer6" type="spacer" hr="true" />
<field name="description3" type="editor" buttons="true" hide="pagebreak,readmore" class="inputbox" label="TPL_SHOPLAB_FIELD_DESCRIPTION3_LABEL" filter="safehtml" description="TPL_SHOPLAB_FIELD_DESCRIPTION3_DESC" />
</fieldset>
</fields>
</config>
</extension>